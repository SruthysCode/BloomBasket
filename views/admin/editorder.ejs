

<%- include('../layouts/adminheader.ejs') -%>


<h1>
    Edit product
</h1>


<div class="content">
  
  <div class="col py-3 d-flex justify-content-center mt-2">
  
              <div class="col-xl-8">
                  <!-- Account details card-->
                  <div class="card mb-4 ">
                      <div class="card-header">Order details</div>
                      <div class="card-body">
  
                          <table class="table table-hover">
                              <thead>
                                  <tr>
                                      <th scope="col">Name</th>
                                      <th scope="col">Price</th>
                                      <th scope="col">Quantity</th>
                                      <th scope="col">Image</th>
                                      <th scope="col"></th>
                                  </tr>
                              </thead>
                              <tbody>
  
                                  <% for(let i=0;i< order.product.length;++i)
                                        {

                                     %>   
                                  <tr>
                                      <td scope="row"><%= order.product[i].pro_id.name %></td>
                                      <td>₹ <%= order.product[i].pro_id.price %></td>
                                      <td><%= order.product[i].qty %></td>
                                      <td><img style="width: 50px; height: auto;" src="/static/productimages/<%= order.product[i].pro_id.image[0] %>"
                                              alt="product image">
                                      </td>
                                                                     </tr>
                                  

                                  <% 
                                    }
                                %>
  
                              </tbody>
                          </table>
  
  
                          <div class="d-flex justify-content-between border mt-5 p-5" style="color: #000;">
                              <div class="mt-3 ">
                                  <p class="mb-2">Total amount : ₹ <strong><%= order.amount %></strong></p>
                                  
                                  <p class="mb-2">Payment method: <%= order.paymentMethod %></p>
                                  <p class="mb-2">Order status : <%= order.orderstatus %></p>
                              
                              </div>
  
  
  
                              <div class="">
                                  <h5 class="border-bottom mb-3">Delivery address</h5>
                                  <p><%= order.address %></p>
                                 
                              </div>
                          </div>
                      </div>
  
                      <div class="d-flex ">
                           <form action="" method="post">
                              <div class="d-flex">
                                  <div style="width: 100%;" class="p-l-15  ">
                                    <input type="hidden" value="<%= order._id %>" name="orderid">
                                    <%
                                     if(order.orderstatus=='Placed')
                                     { 
                                    %>
                                    <div >
                                        <button type="submit" name="action" class="m-l-5 btn btn-success p-2" value="Shipped">Shipped</button>
                                   
                                        <button type="submit" name="action" class="m-l-5 btn btn-success p-2" value="Cancelled">Cancelled</button>
                                    </div>

                                    <% }
                                    else if(order.orderstatus=='Shipped')
                                    {

                                    %>
                                    <div>
                                        <button type="submit" name="action" class="m-l-5 btn btn-success p-2" value="Delivered">Delivered</button>
                                    </div>
                                    <%
                                    }
                                    else if(order.orderstatus=='Delivered')
                                    {

                                    %>
                                    <div>
                                        <button type="submit" name="action" class="m-l-5 btn btn-success p-2" value="Returned">Returned</button>
                                    </div>
                                    <%
                                    }
                                    %>
                                  
                                      <!-- <select class="form-select" name="status" aria-label="Default select example">
                                          <option selected>Change order status</option>
                                          <option value="1">Shipped</option>
                                          <option value="2">Delivered</option>
                                          <option value="3">Cancelled</option>
                                      </select> -->
                                  </div>
                                  <!-- <div>
                                      <button type="submit" class="m-l-5 btn btn-primary">submit</button>
                                  </div> -->
                              </div>
                          </form> 
                          <div class="m-1 pb-5"  >
                                
                              <a href="/admin/order" class=" btn btn-success p-2 ml-2">Back to orders</a>
                            
                            </div>
                      </div>
                  </div>
              </div>
          </div>
  
<%- include('../layouts/footer.ejs') -%>