
<%- include('../layouts/adminheader.ejs') -%>
<div class="container-fluid p-5">
    <div class="container border w-25 shadow p-3 mb-5 bg-body rounded py-5">
      <form action="" method="post">
        <div class="mb-3">
          <label for="typeText" class="form-label">Category</label>
          <input type="text" id="typeText" name="name" class="form-control" value="<%= category.name %>" />
          <input type="hidden" id="typeText" name="id" class="form-control" value="<%= category._id %>" />
        </div>
  
        <div class="mb-3">
          <label for="textAreaExample" class="form-label">Description</label>
          <textarea class="form-control" name="description" id="textAreaExample" rows="4"><%= category.description %></textarea>
        </div>
  
        <div class="text-center">
          <button type="submit" class="btn btn-success">Edit</button>
        </div>
      </form>
    </div>
  </div>
  
