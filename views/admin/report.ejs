
<%- include('../layouts/adminheader.ejs') -%>


<style>
    /* Center the header title */
    .header {
      text-align: center;
    }
  
    /* Style the header title */
    .header h1 {
      font-size: 36px;
      font-weight: bold;
      color: #ffffff;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin: 0;
      padding: 20px 0;
    }
  
    /* Add a border to the header */
    .header {
      border-bottom: 1px solid #ccc;
    }
  
    .sales-report {
    margin-top: 40px;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #ffffff;
  }
  
  .sales-report-title {
    text-align: center;
  }
  
  .sales-report-form {
    display: inline-flexbox;
    /*align-items: center;
    */

  }
  
  .sales-report-form label {
    margin-right: 10px;
    width: 100px
  }
  
  .sales-report-form input,
  .sales-report-form button {
    padding: 5px 10px;
    width: 160px;
  }
  
  .sales-report-button {
    background-color: #098e02;
    color: #fff;
    border: none;
    border-radius: 3px;
  }
  
  .sales-report-button:hover {
    background-color: #04db56;
    cursor: pointer;
  }
  
  </style>
  


<div class="container p-5" style="width: 50% ;">
    <div class="shadow p-3 mb-5 bg-body rounded" style="text-align: center;"  >

        <div class="sales-report">
            <h5 class="sales-report-title">Sales Report</h5>
            <hr>
            <div class="sales-report-form">
            <form action="/admin/daily-report" method="post">
                <label for="daily">Daily sales</label>
                <input type="date" name="daily" id="daily">
                <button class="btn btn-success btn-lg btn-rounded" type="submit">View</button>
            </form>
            </div>
            <br>
            <div class="sales-report-form">
            <form action="/admin/monthly-report" method="post">
                <label for="monthly">Monthly sales</label>
                <input type="month" name="month" id="month">
                <button class="btn btn-success btn-lg btn-rounded" type="submit">View</button>
            </form>
            </div>
            <br>
            <div class="sales-report-form">
            <form action="/admin/yearly-report" method="post">
                <label for="yearly">Yearly sales</label>
                <input type="number" name="yearly" id="yearly" min="2022" max="2024" value="2023">
                <button class="btn btn-success   btn-lg btn-rounded" type="submit">View</button>
            </form>
            </div>
        </div>        
    </div>
</div>

<%- include('../layouts/footer.ejs') -%>
